@inherits RocketContentAPI.Components.RocketContentAPITokens<Simplisity.SimplisityRazor>
@AssigDataModel(Model)
@AddProcessDataResx(appThemeView, true)
<!--inject-->
<div class="w3-panel">
    <div class="w3-row-padding w3-section">
        <div class="w3-row-padding">
            <label>@ResourceKey("DNNrocket.heading")</label>&nbsp;@EditFlag(sessionParams)
            @TextBoxRowTitle(rowData)
        </div>
    </div>
    <div class="w3-row-padding w3-section">
        <div class='w3-col m3 w3-padding'>
            <label>@ResourceKey("DNNrocket.headingstyle")</label>
            @DropDownList(rowData, "genxml/select/headingstyle", "h1,h2,h3,h4", "H1,H2,H3,H4", "class='w3-select w3-border ' ", "", false, 0)
        </div>
        <div class='w3-col m3 w3-padding'>
            <label>@ResourceKey("DNNrocket.headingalign")</label>
            @RadioButtonList(rowData, "genxml/select/headingalign", "start,center,end", "<span class='material-icons'>format_align_left</span>,<span class='material-icons'>format_align_center</span>,<span class='material-icons'>format_align_right</span>", "", "1", "", false, 0, "")
        </div>
        <div class='w3-col m3 w3-padding'>
            <label>@ResourceKey("DNNrocket.hideheading")</label><br />
            @CheckBox(rowData, "genxml/checkbox/hideheading", "", "class='w3-check' ", false, false, 0)
        </div>
        <div class="w3-col m3 w3-padding">
            <label>@ResourceKey("DNNrocket.anchor")</label>&nbsp;@EditFlag(sessionParams)
            @TextBox(rowData, "genxml/lang/genxml/textbox/anchor", "class='w3-input w3-border' autocomplete='off'", "", true, 0)
        </div>
    </div>
</div>